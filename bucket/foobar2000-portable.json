{
    "version": "1.6",
    "description": "An advanced freeware audio player for the Windows platform.",
    "homepage": "https://www.foobar2000.org/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.foobar2000.org/license"
    },
    "suggest": {
        "Encoders": "extras/foobar2000-encoders"
    },
    "url": "https://www.videohelp.com/download/foobar2000_v1.6.exe#/dl.7z",
    "hash": "9fb60170a13a938874dd29c65871ca40c94343e4941b54dca7ba7413ba234ef1",
    "bin": "foobar2000.exe",
    "shortcuts": [
        [
            "foobar2000.exe",
            "Foobar2000"
        ]
    ],
    "persist": [
        "configuration",
        "index-data",
        "library",
        ["playlists-v1.4","playlists"],
        "user-components"
    ],
    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$*\", \"$dir\\uninstall.exe\" -Force -Recurse",
            "New-Item \"$dir\\portable_mode_enabled\" -Force | Out-Null",
            "if (!(Test-Path \"$persist_dir\")) {",
            "    if (Test-Path \"$env:Appdata\\foobar2000\") {",
            "        Write-Host \"Importing files from user directory...\" -ForegroundColor Yellow",
            "        Copy-Item \"$env:Appdata\\foobar2000\\*\" \"$dir\" -Force -Recurse",
            "        if (is_directory \"$dir\\theme.fth\") {",
            "            Remove-Item \"$dir\\theme.fth\" -Force -Recurse",
            "        }",
            "        if (is_directory \"$dir\\LargeFieldsConfig.txt\") {",
            "            Remove-Item \"$dir\\LargeFieldsConfig.txt\" -Force -Recurse",
            "        }",
            "    }",
            "}",
            "else {",
            "    if (Test-Path \"$persist_dir\\LargeFieldsConfig.txt\") {",
            "        Copy-Item \"$persist_dir\\LargeFieldsConfig.txt\" \"$dir\" -Force",
            "    }",
            "    if (Test-Path \"$persist_dir\\theme.fth\") {",
            "        Copy-Item \"$persist_dir\\theme.fth\" \"$dir\" -Force",
            "    }",
            "}",
            "$EncodersDir = $(appdir foobar2000-encoders $global)",
            "if (Test-Path \"$EncodersDir\\current\") {",
            "    New-Item \"$dir\\encoders\" -ItemType Junction -Target \"$EncodersDir\\current\" | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$dir\\LargeFieldsConfig.txt\") {",
            "    Copy-Item \"$dir\\LargeFieldsConfig.txt\" \"$persist_dir\" -Force",
            "}",
            "if (Test-Path \"$dir\\theme.fth\") {",
            "    Copy-Item \"$dir\\theme.fth\" \"$persist_dir\" -Force",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.foobar2000.org/download",
        "regex": "foobar2000_v([\\d.]+)\\."
    },
    "autoupdate": {
        "url": "https://www.videohelp.com/download/foobar2000_v$version.exe#/dl.7z"
    }
}
