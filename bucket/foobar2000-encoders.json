    },
    "url": "https://www.videohelp.com/download/Free_Encoder_Pack-2020-07-11.exe#/dl.7z",
    "hash": "87535c2b89da7915564c047bb6fa039345fdc7c7920c33c2882f789630df24e7",
    "post_install": [
        "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse",
        "if (Test-Path \"$(appdir foobar2000 $global)\") {",
        "   if (!(Test-Path \"$(appdir foobar2000 $global)\\current\\encoders\")) {",
        "       New-Item \"$(appdir foobar2000 $global)\\current\\encoders\" -ItemType Junction -Target \"$dir\" | Out-Null",
        "   }",
        "}",
        "if (Test-Path \"$(appdir foobar2000-portable $global)\") {",
        "   if (!(Test-Path \"$(appdir foobar2000-portable $global)\\current\\encoders\")) {",
        "       New-Item \"$(appdir foobar2000-portable $global)\\current\\encoders\" -ItemType Junction -Target  \"$dir\" | Out-Null",
        "   }",
        "}"
    ],
    "uninstaller": {
        "script":[
            "if (Test-Path \"$(appdir foobar2000 $global)\\current\\encoders\") {",
            "   Remove-Item \"$(appdir foobar2000 $global)\\current\\encoders\" -Force -Recurse",
            "}",
            "if (Test-Path \"$(appdir foobar2000-portable $global)\\current\\encoders\") {",
            "   Remove-Item \"$(appdir foobar2000-portable $global)\\current\\encoders\" -Force -Recurse",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.foobar2000.org/encoderpack",
        "regex": "Free_Encoder_Pack-([\\d-]+)\\.exe"
    },
    "autoupdate": {
        "url": "https://www.videohelp.com/download/Free_Encoder_Pack-$version.exe#/dl.7z"
    }
}
