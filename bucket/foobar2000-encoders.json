{
    "version": "2020-07-11",
    "description": "This pack includes every natively supported free encoder binary for use with the Converter foobar2000 component.",
    "homepage": "https://www.foobar2000.org/encoderpack",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.foobar2000.org/license"
    },
    "suggest": {
        "Foobar2000": "extras/foobar2000",
        "Foobar2000-portable": "extras/foobar2000-portable"
    },
    "url": "https://www.videohelp.com/download/Free_Encoder_Pack-2020-07-11.exe#/dl.7z",
    "hash": "87535c2b89da7915564c047bb6fa039345fdc7c7920c33c2882f789630df24e7",
    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse",
            "$FoobarDir = $(appdir foobar2000 $global)",
            "$FoobarPortableDir = $(appdir foobar2000-portable $global)",
            "if (Test-Path \"$FoobarDir\\current\") {",
            "    Get-ChildItem -Path \"$FoobarDir\\current\" -Filter \"encoders\" | Remove-Item -Force -Recurse",
            "    New-Item \"$FoobarDir\\current\\encoders\" -ItemType Junction -Target \"$dir\" | Out-Null",
            "}",
            "if (Test-Path \"$FoobarPortableDir\\current\") {",
            "    Get-ChildItem -Path \"$FoobarPortableDir\\current\" -Filter \"encoders\" | Remove-Item -Force -Recurse",
            "    New-Item \"$FoobarPortableDir\\current\\encoders\" -ItemType Junction -Target  \"$dir\" | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script":[
            "$FoobarDir = $(appdir foobar2000 $global)",
            "$FoobarPortableDir = $(appdir foobar2000-portable $global)",
            "Get-ChildItem -Path \"$FoobarDir\\current\" -Filter \"encoders\" | Remove-Item -Force -Recurse",
            "Get-ChildItem -Path \"$FoobarPortableDir\\current\" -Filter \"encoders\" | Remove-Item -Force -Recurse"
        ]
    },
    "checkver": {
        "url": "https://www.foobar2000.org/encoderpack",
        "regex": "Free_Encoder_Pack-([\\d-]+)\\.exe"
    },
    "autoupdate": {
        "url": "https://www.videohelp.com/download/Free_Encoder_Pack-$version.exe#/dl.7z"
    }
}
